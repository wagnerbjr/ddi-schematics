@import '@ddi/bootstrap/scss/detran/variables';

.card-filtra-novo-container {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  background-color: $white;
  padding: 30px;
  border-radius: 5px;
  gap: 20px;
  min-width: 680px;

  .alert-message {
    width: 100%;

    ::ng-deep .toastr-status {
      cursor: default;
    }
  }

  .card-inputs-container {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: flex-start;
    gap: 25px;

    .input-field-wrapper {
      display: flex;
      flex-direction: column;

      .select-field {
        ::ng-deep .ng-select-container {
          font-size: 14px;
          font-weight: bold;
          border: 1px solid $dark;
          padding-left: 5px;
          height: 40px;
          border-radius: 2.5px;
          min-width: 220px;
        }

        ::ng-deep .ng-dropdown-panel.ng-select-bottom{
          min-width: 100%;
          width: auto;
        }

        ::ng-deep .ng-dropdown-panel.ng-select-top{
          min-width: 100%;
          width: auto;
        }
      }

      .input-field {
        font-size: 14px;
        border: 1px solid $dark;
        padding-left: 15px;
        height: 40px;
        border-radius: 2.5px;
        width: 465px;
      }

      .input-examinador {
        width: 220px;
      }
    }
  }

  .card-footer-container {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
    width: 100%;

    .card-buttons-container {
      display: flex;
      flex-direction: row;
      justify-content: flex-end;
      align-items: center;

      .button-localizar {
        background-color: $orange-dark;
      }
    }
  }
}

